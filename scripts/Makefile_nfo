################################################################
# NML-specific targets and rules
################################################################

nfo:
	$(_E) "[CPP] $(NFO_FILE)"
	$(_V) $(CC) $(CC_FLAGS) $(MAIN_SRC_FILE) \
		| sed -e "s/$(REPLACE_TITLE)/$(REPO_TITLE)/" \
		| sed -e "s/$(REPLACE_GRFID)/$(GRF_ID)/" \
		| sed -e "s/$(REPLACE_REVISION)/$(REPO_REVISION)/" \
		| sed -e "s/$(REPLACE_FILENAME)/$(OUTPUT_FILENAME)/" \
		> $(NFO_FILE)
	$(_E) "[NFORENUM] $(NFO_FILE)"
	$(_V) $(NFORENUM) $(NFORENUM_FLAGS) $(NFO_FILE)

################################################################
# Definitions which extend the common rules
################################################################
clean::
	$(_E) "[CLEAN NFO]"
	$(_V)-rm -rf $(NFO_FILE)

test::
	$(_E) "grfcodec:                          $(GRFCODEC) $(GRFCODEC_FLAGS)"
	$(_E) "nforenum:                          $(NFORENUM) $(NFORENUM_FLAGS)"
